- content_for :page_title do
  = t('devise.invitations.edit.header')

= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f|
  = render 'shared/error_messages', object: resource
  = devise_error_messages!

  = f.hidden_field :invitation_token
  = f.input :password, autofocus: true, autocomplete: "off", placeholder: t('simple_form.labels.defaults.password'), required: true, input_html: { 'aria-label' => t('simple_form.labels.defaults.password') }
  = f.input :password_confirmation, autocomplete: "off", placeholder: t('simple_form.labels.defaults.confirm_password'), required: true, input_html: { 'aria-label' => t('simple_form.labels.defaults.confirm_password') }

  .actions
    = f.button :button, t('devise.invitations.edit.submit_button'), type: :submit

.form-footer= render "auth/shared/links"
